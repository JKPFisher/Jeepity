<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android___3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_grey_transparent_corners"
                    android:text="Any Language"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="111dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="5dp"
                    android:foregroundGravity="center_horizontal"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_retweet_2" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="81dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_grey_transparent_corners"
                    android:text="Tagalog"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/inputToTranslate"
                android:layout_width="345dp"
                android:layout_height="156dp"
                android:layout_gravity="center"
                android:layout_marginStart="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_grey_transparent_corners"
                android:ems="10"
                android:gravity="top"
                android:hint="Enter text"
                android:includeFontPadding="true"
                android:inputType="textMultiLine|text"
                android:paddingStart="10dp"
                android:singleLine="false" />

            <Button
                android:id="@+id/translateButton"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_corners"
                android:text="Translate"
                app:backgroundTint="@color/purple_700" />

            <TextView
                android:id="@+id/translatedTv"
                android:layout_width="345dp"
                android:layout_height="156dp"
                android:layout_gravity="center"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="33dp"
                android:background="@drawable/rounded_grey_transparent_corners"
                android:includeFontPadding="true"
                android:paddingStart="10dp"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="600dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>